<form method="post" action="{{ path('available_format_delete', {'id': available_format.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ available_format.id) }}">
    <button class="btn">Delete</button>
</form>
